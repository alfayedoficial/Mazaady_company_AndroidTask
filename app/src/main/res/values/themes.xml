<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MazaadyAndroidTask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/regular</item>
    </style>


    <style name="FontRegular">
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontFamily">@font/semi_bold</item>
    </style>

    <style name="FontLight">
        <item name="fontFamily">@font/light</item>
    </style>

    <style name="FontBold">
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="FontMedium">
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="textSemiBoldStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAppearance">@style/FontSemiBold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textLightStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAppearance">@style/FontLight</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="textRegularStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAppearance">@style/FontRegular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="textMediumStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAppearance">@style/FontMedium</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="textBoldStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAppearance">@style/FontBold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/teal_700</item>
    </style>

</resources>